{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "rm -r -f public/api/ && typedoc && node ./rehype.mjs",
        "build": "rm -r -f packages/**/lib/ && node ./build.mjs",
        "preview": "astro preview",
        "watch": "astro dev",
        "start": "astro dev",
        "dev": "astro dev",
        "docs": "pnpm typedoc && astro build",
        "test": "pnpm -r test",
        "pre-release": "pnpm -r pre-release && pnpm docs && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@astrojs/markdown-remark": "^5.1.0",
        "@astrojs/markdown-support": "^0.3.1",
        "@changesets/cli": "^2.27.3",
        "sass": "^1.77.2",
        "tailwindcss": "3.4.3",
        "typedoc": "0.25.13",
        "typedoc-plugin-mdn-links": "^3.1.27",
        "typescript": "~5.4.5",
        "vitest": "^1.6.0"
    },
    "packageManager": "pnpm@9.1.4+sha512.9df9cf27c91715646c7d675d1c9c8e41f6fce88246f1318c1aa6a1ed1aeb3c4f032fcdf4ba63cc69c4fe6d634279176b5358727d8f2cc1e65b65f43ce2f8bfb0"
}
