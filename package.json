{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "rm -r -f public/api/ && typedoc && node ./rehype.mjs",
        "build": "rm -r -f packages/**/lib/ && node ./build.mjs",
        "preview": "astro preview",
        "watch": "astro dev",
        "start": "astro dev",
        "dev": "astro dev",
        "docs": "pnpm typedoc && astro build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "pre-release": "ultra -r pre-release && pnpm docs && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "path-to-regexp": "^6.2.0",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@astrojs/markdown-remark": "^0.5.0",
        "@astrojs/markdown-support": "^0.3.1",
        "@astrojs/renderer-solid": "^0.2.1",
        "@changesets/cli": "^2.19.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.1.1",
        "astro": "^0.21.13",
        "autoprefixer": "^10.4.0",
        "esbuild": "^0.14.5",
        "fast-glob": "^3.2.7",
        "hastscript": "^7.0.2",
        "kleur": "^4.1.4",
        "minimist": "^1.2.5",
        "pnpm": "^6.24.1",
        "postcss": "^8.4.5",
        "rehype-add-classes": "^1.0.0",
        "rehype-autolink-headings": "^6.1.0",
        "rehype-external-links": "^1.0.0",
        "rehype-highlight": "^5.0.1",
        "rehype-parse": "^8.0.3",
        "rehype-sanitize": "^5.0.1",
        "rehype-slug": "^5.0.0",
        "rehype-stringify": "^9.0.2",
        "rehype-toc": "^3.0.2",
        "rehype-urls": "^1.1.1",
        "rehype-wrap": "^1.0.10",
        "remark-code-titles": "^0.1.2",
        "remark-footnotes": "^4.0.1",
        "remark-gfm": "^3.0.1",
        "remark-smartypants": "^2.0.0",
        "rollup": "^2.61.1",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-esbuild": "^4.7.2",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.45.0",
        "tailwindcss": "2.2.19",
        "tsm": "^2.2.1",
        "typedoc": "0.22.10",
        "typedoc-plugin-mdn-links": "^1.0.4",
        "typescript": "~4.5.4",
        "ultra-runner": "^3.10.5",
        "unified": "^10.1.1"
    }
}