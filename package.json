{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "rm -r -f public/api/ && typedoc && node ./rehype.mjs",
        "build": "rm -r -f packages/**/lib/ && node ./build.mjs",
        "preview": "astro preview",
        "watch": "astro dev",
        "start": "astro dev",
        "dev": "astro dev",
        "docs": "pnpm typedoc && astro build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "pre-release": "ultra -r pre-release && pnpm docs && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "path-to-regexp": "^6.2.1",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@astrojs/markdown-remark": "^1.1.3",
        "@astrojs/markdown-support": "^0.3.1",
        "@astrojs/renderer-solid": "^0.4.2",
        "@changesets/cli": "^2.25.0",
        "@rollup/plugin-commonjs": "^23.0.2",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "astro": "^1.5.2",
        "autoprefixer": "^10.4.12",
        "fast-glob": "^3.2.12",
        "hastscript": "^7.1.0",
        "kleur": "^4.1.5",
        "minimist": "^1.2.7",
        "pnpm": "^7.13.6",
        "postcss": "^8.4.18",
        "rehype-add-classes": "^1.0.0",
        "rehype-autolink-headings": "^6.1.1",
        "rehype-external-links": "^2.0.1",
        "rehype-highlight": "^6.0.0",
        "rehype-parse": "^8.0.4",
        "rehype-sanitize": "^5.0.1",
        "rehype-slug": "^5.0.1",
        "rehype-stringify": "^9.0.3",
        "rehype-toc": "^3.0.2",
        "rehype-urls": "^1.1.1",
        "rehype-wrap": "^1.1.0",
        "remark-code-titles": "^0.1.2",
        "remark-footnotes": "^4.0.1",
        "remark-gfm": "^3.0.1",
        "remark-smartypants": "^2.0.0",
        "rollup": "^3.2.3",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-esbuild": "^4.10.1",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.55.0",
        "tailwindcss": "3.2.1",
        "typedoc": "0.23.17",
        "typedoc-plugin-mdn-links": "^2.0.0",
        "typescript": "~4.8.4",
        "ultra-runner": "^3.10.5",
        "unified": "^10.1.2",
        "vite": "^3.1.8",
        "vitest": "^0.24.3"
    }
}