{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "commit": "cz",
        "typedoc": "del-cli docs/ && typedoc",
        "build": "pnpm -r build",
        "watch": "pnpm -r watch --parallel",
        "demo": "gulp default --watch",
        "demo-build": "gulp build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test-dev": "ultra -r test-dev",
        "pre-release": "ultra -r pre-release && pnpm demo-build && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "changelog": {
        "repo": "okikio/native",
        "labels": {
            "breaking": ":boom: Breaking Change",
            "enhancement": ":rocket: Enhancement",
            "bug": ":bug: Bug Fix",
            "documentation": ":memo: Documentation",
            "internal": ":house: Internal"
        },
        "cacheDir": ".changelog"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
        }
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "polymorph-js": "^1.0.2"
    },
    "devDependencies": {
        "@changesets/cli": "^2.17.0",
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@csstools/postcss-sass": "^4.0.0",
        "autoprefixer": "^10.3.3",
        "browser-sync": "^2.27.5",
        "chalk": "^4.1.2",
        "chokidar": "^3.5.2",
        "commitizen": "^4.2.4",
        "del": "^6.0.0",
        "del-cli": "^4.0.1",
        "esbuild": "^0.12.24",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.8.6",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "^9.0.1",
        "gulp-pug": "^5.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-size": "^4.0.1",
        "gulp-terser": "^2.0.1",
        "gulp-typescript": "^6.0.0-alpha.1",
        "gzip-size": "^6.0.0",
        "husky": "^7.0.2",
        "lerna-changelog": "^2.1.0",
        "path-to-regexp": "^6.2.0",
        "pnpm": "^7.33.4",
        "postcss": "^8.3.6",
        "postcss-csso": "^5.0.1",
        "postcss-scss": "^4.0.0",
        "pretty-bytes": "^5.6.0",
        "sass": "^1.38.2",
        "tailwindcss": "^2.2.9",
        "typedoc": "^0.21.9",
        "typescript": "~4.4.2",
        "ultra-runner": "^3.10.5"
    }
}