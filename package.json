{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "rm -r -f public/api/ && typedoc",
        "build": "rm -r -f packages/**/lib/ && node ./build",
        "start": "astro dev",
        "docs": "astro build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "pre-release": "ultra -r pre-release && pnpm docs && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@astrojs/markdown-support": "^0.3.1",
        "@astrojs/renderer-solid": "^0.1.0",
        "@changesets/cli": "^2.17.0",
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@silvenon/remark-smartypants": "^1.0.0",
        "astro": "^0.20.5",
        "chalk": "^4.1.2",
        "esbuild": "^0.12.26",
        "globby": "^12.0.2",
        "hastscript": "^7.0.2",
        "minimist": "^1.2.5",
        "pnpm": "^6.14.7",
        "rehype-add-classes": "^1.0.0",
        "rehype-autolink-headings": "^6.1.0",
        "rehype-external-links": "^1.0.0",
        "rehype-highlight": "^5.0.0",
        "rehype-sanitize": "^5.0.0",
        "rehype-slug": "^5.0.0",
        "rehype-toc": "^3.0.2",
        "rehype-urls": "^1.1.1",
        "rehype-wrap": "^1.0.10",
        "remark-code-titles": "^0.1.2",
        "remark-footnotes": "^4.0.1",
        "remark-gfm": "^2.0.0",
        "rollup": "^2.56.3",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-esbuild": "^4.5.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.39.2",
        "tailwindcss": "^2.2.15",
        "typedoc": "0.22.2",
        "typedoc-plugin-mdn-links": "^1.0.4",
        "typescript": "~4.4.3",
        "ultra-runner": "^3.10.5"
    }
}