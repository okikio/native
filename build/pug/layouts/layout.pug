include /components/navbar.pug
include /components/footer.pug
include /components/big-transition.pug

doctype html
html.dark
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    block title
      title Homepage
    meta(name='description' content='')
    meta(name="color-scheme" content="dark light")
    meta(name='viewport' content='width=device-width, initial-scale=1')

    link(rel="icon", type="image/svg+xml" href="./favicon.svg")

    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com')

    link(href='https://fonts.googleapis.com/css2?family=Manrope:wght@500;600;700;800&display=swap' rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Material+Icons&family=Material+Icons+Round&display=block' rel='stylesheet')

    link(rel='stylesheet' href='./css/app.css')

    script(src='./js/theme.min.js' async)
    script(src="./js/webanimation-polyfill.min.js")
  body
    +navbar

    +big-transition
    .navbar-offset
    main(data-wrapper)
      block content

    +footer

    script(src="https://cdn.polyfill.io/v3/polyfill.min.js?features=default,es2015,es2018,Array.prototype.includes,Map,Set,Promise" async)
    block scripts
      script(src='./js/legacy.min.js' nomodule)
      script(src='./js/main.min.js' type='module' async)
