{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2021",
        "module": "es2022",
        "lib": [
            "ES2021",
            "ESNext",
            "DOM"
        ],
        "incremental": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "outDir": "./lib",
        "diagnostics": false,
        "extendedDiagnostics": false,
        "skipLibCheck": false,
        "jsx": "preserve",
        "allowJs": true,
        
        "baseUrl": ".",
        "paths": {
            "src:*": ["src/*"],
            "layout:*": ["src/layouts/*.astro"],
            "component:*": ["src/components/*.astro"]
        }
    }
}